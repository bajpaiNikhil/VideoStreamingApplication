            android:id="@+id/action_videoListFragment_to_videoPlayFragment"
            app:destination="@id/videoPlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayFragment"
        android:name="com.example.videostreamingapplication.videoPlayFragment"
        android:label="fragment_video_play"
